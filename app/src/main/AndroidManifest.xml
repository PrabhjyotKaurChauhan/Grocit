<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cargc0044.grocit" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    //location
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Grocit"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
>

        <!-- SPLASH ACTIVITY -->
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/Theme.Design.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- NO INTERNET CONNECTION ACTIVITY -->
        <activity
            android:name=".activity.NoInternetConnection"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                `
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- LOGIN ACTIVITY -->
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- MAIN ACTIVITY -->
        <activity android:name=".activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- Shop category activity -->

        <activity
            android:name=".activity.notifications"
            android:label="@string/title_activity_notifications" />
        <activity
            android:name=".activity.ProductDetail"
            android:label="@string/title_activity_product_detail" />
        <activity
            android:name=".activity.Cartz"
            android:label="@string/title_activity_cart" />
        <activity
            android:name=".activity.CheckoutActivity"
            android:label="@string/title_activity_checkout" >
        </activity>
        <activity
            android:name=".activity.LandingActivity"
            android:label="@string/title_activity_landing"
            android:theme="@style/FullScreen" >
        </activity>
        <activity
            android:name=".activity.RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:theme="@style/FullScreen" >
        </activity>
        <activity
            android:name=".activity.ProfileUpdateActivity"
            android:label="@string/title_activity_profile_update" >
        </activity>
        <activity
            android:name=".activity.ChangePasswordActivity"
            android:label="@string/title_activity_change_password" >
        </activity>
        <activity
            android:name=".activity.ForgetPassword"
            android:label="@string/title_activity_forget_password" >
        </activity>
        <activity
            android:name=".activity.VerifySMSCode"
            android:label="@string/title_activity_verify_sms" >
        </activity>
        <activity
            android:name=".activity.NewPassword"
            android:label="@string/title_activity_new_password" >
        </activity>
    </application>

</manifest>
